<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <%= render 'users/profile', user: @user %>
            <%= render 'books/new', booknew: @booknew %>
        </div>
    <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
            <tbody>
                <tr>
                    <td>
                        <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
                        <p><%= link_to @user.name, user_path(@user.id) %></p>
                    </td>
                    <td>
                        <%= @book.title %>
                    </td>
                    <td>
                        <%= @book.body %>
                    </td>
                    <td>
                        <% if @user.id == current_user.id %>
                            <td>
                                <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-success' %>
                            </td>
                            <td>
                            <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?", class: 'btn btn-sm btn-danger' %>
                            </td>
                        <% end %>
                        
                        <% if @book.favorited_by?(current_user) %>
                            <td>
                                <%= link_to book_favorites_path(@book), method: :delete do %>
                                    ♥<%= @book.favorites.count %>
                                <% end %>
                            </td>
                        <% else %>
                            <td>
                                <%= link_to book_favorites_path(@book), method: :post do %>
                                    ♡<%= @book.favorites.count %>
                                <% end %>
                            </td>
                        <% end %>
                        <td colspan="3">
                           <p>コメント数:<%= @book.book_comments.count %></P>
                        </td>
                    </td>
                </tr>
            </tbody>
        </table>
        
        <table>
            <% @book.book_comments.each do |book_comment| %>
            <tr>
                <div class="comments">
                    
                    <td><%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
                        <p><%= book_comment.user.name %></p>
                    </td>
                    <td><%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
                    <td><%= book_comment.comment %></td>
                    <% if book_comment.user == current_user %>
                    <div class="comment-delete">
                        <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: 'btn btn-sm btn-danger' %></td>
                    </div>
                    <% end %>
                </div>
            </tr>
            <% end %>
        </table>
        <div class="new-comment">
            <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
                <%= f.text_area :comment, class: "form-control", rows: 5 %>
                <%= f.submit "送信する" %>
            <% end %>
        </div>
        
    </div>
</div>

