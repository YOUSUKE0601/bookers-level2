<h2 class="mt-3">New book</h>
  <% if booknew.errors.any? %>
    <% if booknew.errors.count == 1 %>
      <%= booknew.errors.count %>error
    <% else %>
      <%= booknew.errors.count %>errors
    <% end %>
    <% booknew.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <%= form_with model:booknew, local:true do |f| %>


  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book', class: 'btn btn-success' %>

<% end %>