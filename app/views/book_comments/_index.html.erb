<table>
  <% book.book_comments.each do |book_comment| %>
    <tr>
      <div class="comments">
        <td><%= attachment_image_tag book_comment.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          <p><%= book_comment.user.name %></p>
        </td>
        <td><%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= book_comment.comment %></td>
        <% if book_comment.user == current_user %>
          <div class="comment-delete">
            <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: 'btn btn-sm btn-danger' %></td>
          </div>
        <% end %>
      </div>
    </tr>
  <% end %>
</table>